	Publisher = {American Geophysical Union},
	Title = {Cloud fraction errors caused by finite resolution measurements},
	Ty = {JOUR},
	Url = {http://dx.doi.org/10.1029/96JD02663},
	Volume = {102},
	Year = {1997},
