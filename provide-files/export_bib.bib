	Number = {43},
	Pages = {13167-13171},
	Title = {Direct weakening of tropical circulations from masked CO2 radiative forcing},
	Url = {http://www.pnas.org/content/112/43/13167.abstract},
	Volume = {112},
	Year = {2015},
