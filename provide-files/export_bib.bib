	Journal = {Journal of the Atmospheric Sciences},
	Keywords = {aquaplanet},
	Month = {9},
	Number = {9},
	Pages = {2842--2860},
	Title = {The Storm-Track Response to Idealized SST Perturbations in an Aquaplanet GCM},
	Ty = {JOUR},
