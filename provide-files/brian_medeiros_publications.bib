	Journal = {Journal of Climate},
	Number = {15},
	Pages = {4661-4680},
	Title = {Cloud Radiative Feedbacks and El Ni{\~n}o--Southern Oscillation},
	Url = {https://doi.org/10.1175/JCLI-D-18-0842.1},
