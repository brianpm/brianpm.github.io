	Journal = {Climate Dynamics},
	Month = {Dec},
	Number = {11},
	Pages = {6877--6890},
	Title = {Contributions of atmospheric and oceanic feedbacks to subtropical northeastern sea surface temperature variability},
	Url = {https://doi.org/10.1007/s00382-019-04964-1},
	Volume = {53},
