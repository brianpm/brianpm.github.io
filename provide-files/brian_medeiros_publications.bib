	Issn = {1942-2466},
	Journal = {Journal of Advances in Modeling Earth Systems},
	Keywords = {Precipitation, General circulation, Clouds and aerosols, Global climate models, Aerosols and particles, Tropical rain belt, ITCZ, aerosol, Energy transport},
	Pages = {n/a--n/a},
	Title = {Fast and slow shifts of the zonal-mean intertropical convergence zone in response to an idealized anthropogenic aerosol},
