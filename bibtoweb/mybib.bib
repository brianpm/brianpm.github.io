	journal = {Journal of Advances in Modeling Earth Systems},
	keywords = {Boundary layer processes, Global climate models, Polar meteorology, Cloud/radiation interaction, Cloud physics and chemistry, Arctic, boundary-layer, mixed-phase clouds, models, intercomparison, inversion},
	number = {3},
	pages = {1345--1357},
