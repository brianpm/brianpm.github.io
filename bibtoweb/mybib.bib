	journal = {Journal of Geophysical Research: Atmospheres},
	keywords = {atmospheric river, atmospheric blocking, storm track, extreme precipitation, CESM, precursor weather pattern},
	number = {21},
	pages = {11330-11353},
	title = {Atmospheric Blocking and Other Large-Scale Precursor Patterns of Landfalling Atmospheric Rivers in the {N}orth {P}acific: A {CESM2} Study},
	url = {https://agupubs.onlinelibrary.wiley.com/doi/abs/10.1029/2019JD030790},
